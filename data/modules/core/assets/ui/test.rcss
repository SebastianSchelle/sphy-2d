@spritesheet theme {
    src: assets/test.dds;
    test: 0px 0px 512px 512px;
}

body {
    font-family: Orbitron;
    font-weight: normal;
    font-style: normal;
    font-size: 15dp;
    background: transparent;
}

body.window {
    padding: 30px 30px;
    decorator: image(test);
}

div {
    display: block;
}

.layout {
    width: 100%;
    display: flex;
    gap: 16px;
    padding: 10px;
}

button {
    outline: 0;
    border-width: 1px;
    border-style: solid;
    border-color: rgb(0, 6, 92);
    border-radius: 5px;
    font-size: 18px;
    background: #09008877;
    padding: 10px;
    width: auto;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
button:hover {
    background: #4d63a6;
}
button:active {
    background: #7185c0;
}

/* Tree View Styles */
.tree-container {
    padding: 10px;
    background: rgba(10, 10, 20, 0.5);
    border-radius: 5px;
    font-family: 'Courier New', monospace;
    font-size: 14px;
    color: #e0e0e0;
    max-height: 400px;
    overflow-y: auto;
}

.tree-node {
    display: block;
    padding: 2px 0;
    line-height: 1.4em;
    user-select: none;
}

.tree-node:hover {
    background: rgba(100, 100, 150, 0.2);
}

.tree-spacer {
    display: inline-block;
    color: #666;
    font-family: monospace;
    margin-right: 2px;
    min-width: 1em;
    text-align: left;
}

.tree-toggle {
    display: inline-block;
    cursor: pointer;
    color: #4a9eff;
    font-size: 10px;
    margin-right: 4px;
    min-width: 12px;
    text-align: center;
    vertical-align: middle;
}

.tree-toggle:hover {
    color: #6bb3ff;
    transform: scale(1.2);
}

.tree-toggle[data-expanded="false"] {
    color: #888;
}

.tree-label {
    display: inline-block;
    color: #e0e0e0;
    cursor: default;
    vertical-align: middle;
}

.tree-node:hover .tree-label {
    color: #fff;
}

.tree-children {
    margin-left: 0;
    display: block;
}

.tree-node:last-child .tree-spacer {
    color: transparent;
}